  <div class="groceryDiv">
  
    <h1>Grocery List</h1>
    <p>Happy Shopping! Input the grocery items you need to purchase.</p>


    <section class="groceryItemInput">
        <form action="/groceries" method="POST">
            <input type="text" id="inputItem" placeholder="Enter grocery item:" name="groceries">
            <button type="submit" id="addButton">Add</button>
        </form>
    </section>
    

    <section class="groceryList">
        <ul>
            <% for(var i=0; i < groceries.length; i++){ %>
                <li class="groceryItem">
                    <input type="checkbox">
                    <span><%= groceries[i].groceries %></span>
                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                </li>
            <% } %>
        </ul>
    </section>
  </div>

